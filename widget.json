{
  "name": "Google Sheets Autocomplete",
  "type": "iframe",
  "width": "100%",
  "height": "auto",
  "settings": {
    "scriptId": {
      "type": "text",
      "label": "Google Apps Script ID",
      "description": "The deployment ID of your Google Apps Script (required)",
      "required": true,
      "default": "AKfycbxUq5FCWznDB28yKSeHqFAv765nZ9P96N5hQNQebUYazmDT5fFG_5YAP7OP6FTcm3CJ"
    },
    "sheetName": {
      "type": "text",
      "label": "Sheet Name",
      "description": "Name of the sheet to use (required)",
      "required": true,
      "default": "FullList"
    },
    "columnIndex": {
      "type": "number",
      "label": "Column Index",
      "description": "Index of the column to search (0-based)",
      "default": 1
    },
    "placeholderText": {
      "type": "text",
      "label": "Placeholder Text",
      "description": "Text to show when input is empty",
      "default": "Begin te typen..."
    },
    "minCharRequired": {
      "type": "number",
      "label": "Minimum Characters",
      "description": "Minimum characters before showing suggestions",
      "default": 3
    },
    "maxResults": {
      "type": "number",
      "label": "Maximum Results",
      "description": "Maximum number of suggestions to show",
      "default": 5
    },
    "threshold": {
      "type": "number",
      "label": "Search Threshold",
      "description": "Fuzzy search threshold (0.0 to 1.0)",
      "default": 0.4
    },
    "distance": {
      "type": "number",
      "label": "Search Distance",
      "description": "Maximum distance for fuzzy search",
      "default": 100
    },
    "dynamicResize": {
      "type": "boolean",
      "label": "Dynamic Resize",
      "description": "Automatically adjust widget height",
      "default": true
    }
  }
}
